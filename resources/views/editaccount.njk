{% extends "parent.njk" %}

{% block content %}
{% for error in old('errors') %}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Hiba!</strong> {{ error.message }}
</div>
{% endfor %}
<form class="form-horizontal" method="POST">
{{ csrfField }}
  <fieldset>
    <legend>Fiókadatok szerkesztése</legend>
    <div class="form-group">
      <label for="inputUsername" class="col-lg-2 control-label">Felhasználónév</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputUsername" name="username" placeholder="Felhasználónév" value="{{ currentUser.username }}">
      </div>
    </div>
    <div class="form-group">
      <label for="inputFirstName" class="col-lg-2 control-label">Keresztnév</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputFirstName" name="firstname" placeholder="Keresztnév" value="{{ currentUser.firstname }}">
      </div>
    </div>
    <div class="form-group">
      <label for="inputLastName" class="col-lg-2 control-label">Vezetéknév</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputLastname" name="lastname" placeholder="Vezetéknév" value="{{ currentUser.lastname }}">
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">E-mail</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputEmail" name="email" placeholder="E-mail" value="{{ currentUser.email }}">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Jelszó</label>
      <div class="col-lg-10">
        <input type="password" class="form-control" id="inputPassword" name="password" placeholder="&bull;&bull;&bull;&bull;&bull;&bull;&bull;">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword2" class="col-lg-2 control-label">Jelszó megerősítése</label>
      <div class="col-lg-10">
        <input type="password" class="form-control" id="inputPassword2" name="password2" placeholder="&bull;&bull;&bull;&bull;&bull;&bull;&bull;">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <a href="/account"><span class="btn btn-default" id="cancel">Mégsem</span></a>
        <button type="submit" class="btn btn-primary" id="saveChanges">Változtatások mentése</button>
      </div>
    </div>
  </fieldset>
</form>

{% endblock %}